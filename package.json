    "build": "webpack --optimize-minimize --optimize-dedupe --devtool source-map",
    "lint": "standard"
  },
  "author": "Emmanuel and Reed",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.0.1",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "standard": "^7.1.1",
    "standard-loader": "^4.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ],
    "ignore": [
      "karma.conf.js"

{
  "name": "pressure_pong",
  "version": "1.0.0",
  "description": "A pong game",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register src/js",
    "karma-start": "karma start",
    "karma-test": "karma run",
    "pretest": "npm run lint",
    "prestart": "npm run lint && rm -rf dist && mkdir dist && cp index.html dist/",
